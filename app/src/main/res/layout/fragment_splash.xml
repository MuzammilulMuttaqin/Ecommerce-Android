<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.onboarding.SplashFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_green"
            android:layout_width="140dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="130dp"
            android:layout_height="150dp"
            android:contentDescription="@string/splash_screen"
            android:src="@drawable/ic_card_green" />

        <ImageView
            android:id="@+id/card_red"
            android:layout_width="170dp"
            android:transformPivotX="200dp"
            android:transformPivotY="150dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="50dp"
            android:layout_height="100dp"
            android:contentDescription="@string/splash_screen"
            android:src="@drawable/ic_card_red" />


        <ImageView
            android:id="@+id/card_yellow"
            android:layout_width="170dp"
            android:transformPivotY="100dp"
            android:transformPivotX="0dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="50dp"
            android:layout_height="100dp"
            android:contentDescription="@string/splash_screen"
            android:src="@drawable/ic_card_yellow" />

        <ImageView
            android:id="@+id/splash_screen"
            android:layout_width="200dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="100dp"
            android:layout_height="150dp"
            android:contentDescription="@string/splash_screen"
            android:src="@drawable/splash" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
